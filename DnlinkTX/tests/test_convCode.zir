#include "../definitions.zir"
#include "../convCode.zir"

fun comp test_convCode() {
var output : arr[MAX_BIT_MSG_SIZE] bit;
var len : int16;

  x <- takes 32;
  do { len := convCode(x, 32, output); };
  for i in [0, len/8] {
    emits output[i*8, 8];
  }
};

let comp main = read[bit] >>> test_convCode() >>> write[bit]


